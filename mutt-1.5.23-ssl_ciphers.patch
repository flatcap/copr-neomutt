   { "ssl_client_cert", DT_PATH|DT_PATH_FILE, 0, 0, NULL,
diff --git a/conn/gnutls.c b/conn/gnutls.c
index 809bc1e20..05d997d70 100644
--- a/conn/gnutls.c
+++ b/conn/gnutls.c
@@ -774,45 +774,48 @@ static int tls_set_priority(struct TlsSockData *data)
   else
     mutt_buffer_strcpy(priority, "NORMAL");
 
-  const bool c_ssl_use_tlsv1_3 =
-      cs_subset_bool(NeoMutt->sub, "ssl_use_tlsv1_3");
-  if (!c_ssl_use_tlsv1_3)
+  if (c_ssl_ciphers && (strcmp(c_ssl_ciphers, "@SYSTEM") == 0))
   {
-    nproto--;
-    mutt_buffer_addstr(priority, ":-VERS-TLS1.3");
-  }
-  const bool c_ssl_use_tlsv1_2 =
-      cs_subset_bool(NeoMutt->sub, "ssl_use_tlsv1_2");
